-include GNUmakefile.preamble

include $(GNUSTEP_MAKEFILES)/application.make
runDrawPrimitiveTest: 
	export LD_LIBRARY_PATH=$(DrawPrimitiveTest_LD_LIBRARY_PATH) && openapp ./DrawPrimitiveTest.app

runEaseDemo: 
	export LD_LIBRARY_PATH=$(EaseDemo_LD_LIBRARY_PATH) && openapp ./EaseDemo.app

runIntervalDemo: 
	export LD_LIBRARY_PATH=$(IntervalDemo_LD_LIBRARY_PATH) && openapp ./IntervalDemo.app


runLayerTest: 
