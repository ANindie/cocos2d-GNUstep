COCOSTEPRESOURCEDIR = ../Resources/



APP_NAME = DrawPrimitiveTest EaseDemo IntervalDemo LayerTest ParallaxTest

DrawPrimitiveTest_APPLICATION_ICON = Icon.png
DrawPrimitiveTest_OBJC_FILES = drawPrimitivesTest.m main.m
